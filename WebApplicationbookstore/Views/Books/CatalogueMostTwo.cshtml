@model IEnumerable<WebApplicationbookstore.Models.Book>

@{
	ViewData["Title"] = "Catalogue";
	int intSno = 0;
}
@{
	Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="bg-secondary text-white">
	<h1 class="text-primary">The Most Poplar Books</h1>
</div>

<a asp-controller="Books" asp-action="catalogue" class="btn btn-info">
	GO TO CATLOG
	<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door-fill" viewBox="0 0 16 16">
		<path d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5z" />
	</svg>
</a>


<div class="container-fluid">
	<div class="row">
		@foreach (var item in Model)
		{
			intSno += 1;
			<div class="col-md-3">
				Nunber : @intSno
				<div class="card">
					<div class="card-header">
						@item.Title
					</div>
					<div class="card-body">
						<img src="~/images/@item.Imgfile" height="150" /> <br />
						price: ₪@item.Price <br />
						about: @item.Info <br />
						comment: @item.BookComments.Count
					</div>
					<div class="card-footer">
						<a class="p-1 m-lg-2 btn btn-sm btn-info" asp-controller="Orders" asp-action="Create" asp-route-id="@item.Id">Details & Buy</a>
					</div>
					<br />
				</div>
			</div>
		}
	</div>
</div>