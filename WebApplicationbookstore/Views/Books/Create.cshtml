@model WebApplicationbookstore.Models.Book

@{
	ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Books</h4>
<hr />
<div class="bg-secondary text-white  row">
	<div class="col-md-4">
		<form asp-action="Create" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" required/>
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Info" class="control-label"></label>
				<input asp-for="Info" class="form-control" required/>
				<span asp-validation-for="Info" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Bookquantity" class="control-label"></label>
				<input asp-for="Bookquantity" class="form-control" required/>
				<span asp-validation-for="Bookquantity" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Price" class="control-label"></label>
				<input asp-for="Price" class="form-control" required/>
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label" asp-for="Cataid">Catagory</label>
				<div>
					<select name="Cataid" class="form-control" asp-for="Cataid" id="Cataid" required>
						<option value="0">Please select</option>
						<option value="1">Drama</option>
						<option value="2">Action-Adventure</option>
						<option value="3">Comedy</option>
					</select>

				</div>
			</div>

			<div class="form-group">
				<label asp-for="Author" class="control-label"></label>
				<input asp-for="Author" class="form-control" required/>
				<span asp-validation-for="Author" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label class="control-label">Pic</label>
				<input type="file" class="form-control" name="file" required/>
			</div>

			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" required/>
			</div>
		</form>


	</div>
</div>

<div>
	<a asp-action="Index" class="btn btn-info">Back to List</a>
</div>
<br />
<br />


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
